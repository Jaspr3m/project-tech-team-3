<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>
    <style>
        /* later in aparte css bestand uitwerken */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        .container {
            display: grid;
            grid-template-columns: 10vw 1fr;
            height: 100vh;
        }
        .sidebar {
            background: #f0f0f0;
            min-width: 80px;
            max-width: 300px;
            border-right: 1px solid #ddd;
        }
        .main {
            padding: 2rem;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        .user-item {
            display: flex;
            align-items: center;
            width: 100%;
            max-width: 700px;
            background: #fff;
            border: 1px solid #eee;
            border-radius: 8px;
            margin-bottom: 1rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
        }
        .user-img {
            width: 200px;
            height: 120px;
            background: #cce;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: #888;
            border-right: 1px solid #eee;
            flex-shrink: 0;
        }
        .user-info {
            flex: 1;
            padding: 1rem;
        }
        @media (max-width: 700px) {
            .container {
                grid-template-columns: 1fr;
            }
            .sidebar {
                display: none;
            }
            .main {
                padding: 1rem;
            }
            .user-item {
                flex-direction: column;
                align-items: stretch;
            }
            .user-img {
                width: 100%;
                height: 120px;
                border-right: none;
                border-bottom: 1px solid #eee;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <!-- Sidebar content (optional) -->
        </div>
        <div class="main">
            <% if (users.length === 0) { %>
                <p>No users with 'voornaam' found.</p>
            <% } else { %>
                <% users.forEach(function(user) { %>
                    <div class="user-item">
                        <div class="user-img">
                            <span>IMG</span>
                        </div>
                        <div class="user-info">
                            <div><strong>ID:</strong> <%= user._id %></div>
                            <div><strong>Voornaam:</strong> <%= user.voornaam %></div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>
